{
    "manifest_version": 3,
    "name": "TabRandomizer",
    "description": "Randomly (or partly randomly) select a tab form the current window.",
    "version": "1.0",
    "icons": {
        "16": "images/random_16px.png",
        "32": "images/random_32px.png",
        "64": "images/random_64px.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/random_16px.png"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}